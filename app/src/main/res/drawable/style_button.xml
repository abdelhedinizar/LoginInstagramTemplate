<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#20000000"
                android:endColor="#20000000"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="#30FFCCFF" />
        </shape>
    </item>
    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#05000000"
                android:endColor="#05000000"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="#80FFCCFF" />
        </shape>




    </item>

    </selector>